'use strict';

var app = angular.module('findmetv', ['ngRoute', 'angularUtils.directives.dirDisqus', 'ui.bootstrap', 'angucomplete']);

app.config(['$routeProvider', '$locationProvider', function($routeProvider, $locationProvider) {
  $routeProvider.
    // when('/', {
    //   templateUrl: "<%= asset_path('static_pages/index.html') %>",
    //   controller: 'StaticPagesCtrl'
    // }).
    when('/tv_series', {
      templateUrl: "<%= asset_path('series/index.html') %>",
      controller: 'SeriesIndexCtrl'
    }).
    when('/tv_series/best', {
      templateUrl: "<%= asset_path('series/best.html') %>",
      controller: 'SeriesBestCtrl'
    }).
    when('/tv_series/category/:category', {
      templateUrl: "<%= asset_path('series/category.html') %>",
      controller: 'SeriesCategoryCtrl'
    }).
    when('/tv_series/:id', {
      templateUrl: "<%= asset_path('series/show.html') %>",
      controller: 'SeriesShowCtrl'
    }).
    when('/', {
      templateUrl: "<%= asset_path('series/vote.html') %>",
      controller: 'SeriesVoteCtrl'
    })

  $locationProvider.html5Mode(true);    
}]);