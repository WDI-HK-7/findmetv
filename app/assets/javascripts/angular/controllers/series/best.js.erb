app.controller('SeriesBestCtrl', ['$scope', '$http', '$location', function($scope, $http, $location){

  $http.get("<%= ENV['URL'] %>" + 'best').success(function(response){
    console.log(response);
    $scope.best = response;
  });

  $http.get("<%= ENV['URL'] %>" + 'worst').success(function(response){
    console.log(response);
    $scope.worst = response;
  });

  $scope.items = [
    'The first choice!',
    'And another choice for you.',
    'but wait! A third!'
  ];

  $scope.status = {
    isopen: false
  };

  $scope.toggled = function(open) {
    console.log('Dropdown is now: ', open);
  };

  $scope.toggleDropdown = function($event) {
    $event.preventDefault();
    $event.stopPropagation();
    $scope.status.isopen = !$scope.status.isopen;
  };

}]);